{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Swagger Petstore",
        "description": "A sample API that uses a petstore as an example to demonstrate features in the swagger-2.0 specification",
        "contact": {
            "name": "George Wilson"
        },
        "license": {
            "name": "GPLv3"
        }
    },
    "host": "localhost:8002",
    "basePath": "/api",
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/vnd.api+json"
    ],
    "paths": {
        "/users": {
            "get": {
                "description": "Returns all users",
                "operationId": "wilsonge.api.controller.users.userList",
                "responses": {
                    "200": {
                        "description": "A list of users.",
                        "schema": {
                            "$ref": "#/definitions/UserPagination"
                        }
                    },
                    "500": {
                        "description": "Internal Service Error",
                        "schema": {
                            "$ref": "#/definitions/ErrorResponse"
                        }
                    }
                }
            }
        },
        "/user/{id}": {
            "get": {
                "description": "Returns a single user from the system",
                "operationId": "wilsonge.api.controller.users.userItem",
                "responses": {
                    "200": {
                        "description": "Return a single user.",
                        "schema": {
                            "$ref": "#/definitions/UserItem"
                        }
                    },
                    "500": {
                        "description": "Internal Service Error",
                        "schema": {
                            "$ref": "#/definitions/ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "ErrorResponse": {
            "required": [
                "error",
                "error_description"
            ],
            "properties": {
                "error": {
                    "type": "string"
                },
                "error_description": {
                    "type": "string"
                }
            }
        },
        "UserPagination": {
            "type": "object",
            "required": [
                "data",
                "links"
            ],
            "properties": {
                "data": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/User"
                    }
                },
                "links": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "UserItem": {
            "type": "object",
            "required": [
                "data",
                "links"
            ],
            "properties": {
                "data": {
                    "type": "object",
                    "$ref": "#/definitions/User"
                },
                "links": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "User": {
            "type": "object",
            "required": [
                "id",
                "type",
                "attributes"
            ],
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int64"
                },
                "type": {
                    "type": "string"
                },
                "attributes": {
                    "type": "object",
                    "$ref": "#/definitions/UserAttributes"
                },
                "links": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "meta": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "UserAttributes": {
            "type": "object",
            "required": [
                "username",
                "first_name",
                "last_name"
            ],
            "properties": {
                "username": {
                    "type": "string"
                },
                "first_name": {
                    "type": "string"
                },
                "last_name": {
                    "type": "string"
                }
            }
        }
    }
}